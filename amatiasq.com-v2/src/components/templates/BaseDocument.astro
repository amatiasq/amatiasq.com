---
import '../../styles/base.css';
import { getLangFromUrl } from '@internals/i18n';

export interface Props {
  title?: string;
  class?: string;
}

const { class: className } = Astro.props;

const title = [Astro.props.title, 'A. Mat√≠as Quezada']
  .filter(Boolean)
  .join(' | ');
---

<html lang={getLangFromUrl(Astro.url)}>
  <head>
    <meta charset="utf-8" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <script>
      // if (CSS['paintWorklet'] === undefined)
      //   await import('https://unpkg.com/css-paint-polyfill')

      if ('paintWorklet' in CSS) {
        (CSS as any).paintWorklet.addModule('dot-mesh.js');
      }
    </script>
    <style is:global>
      :root {
        --points: 20;
        --points-x: 20;
        --points-y: 20;
      }
      body {
        --points: 30;
        --points-x: 30;
        --points-y: 30;
        background: paint(dot-mesh);
        background-attachment: fixed;
      }
    </style>
  </head>
  <body class:list={[className]}>
    <slot />
  </body>
</html>
