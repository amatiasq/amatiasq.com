---
import '../../styles/base.css';
import { getLangFromUrl } from '@internals/i18n';

export interface Props {
  title?: string;
  class?: string;
}

const { class: className } = Astro.props;

const title = [Astro.props.title, 'A. Mat√≠as Quezada']
  .filter(Boolean)
  .join(' | ');
---

<html lang={getLangFromUrl(Astro.url)}>
  <head>
    <meta charset="utf-8" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>

    <script>
      CSS.paintWorklet?.addModule('/dot-mesh.js');
    </script>

    <style is:global>
      :root {
        --grid-size: 10;
        --grid-point-size: 1;
        --grid-color: hsl(75, 0%, 8%);
      }

      body {
        background: paint(diagonal-grid);
        background-attachment: fixed;
      }
    </style>
  </head>
  <body class:list={[className]}>
    <slot />
  </body>
</html>
