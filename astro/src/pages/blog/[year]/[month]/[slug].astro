export async function getStaticPaths() {
  const files = await Astro.glob<ArticleFrontmatter>('../../../../data/blog/*.md');
  const posts = cleanAndSort(files, '/blog');
  return posts.map(post => ({ params: post.urlParams, props: { post } }));
}

